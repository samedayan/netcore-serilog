@{
    ViewData["Title"] = "Home Page";
}
@model List<Elk.Serilog.RabbitMq.Model.Customer>

<div class="container-fluid">
    @using(Html.BeginForm("Post","Home","FormMethod.Post"))   
    {
        <select name="name" onchange="setCustomerValue(this.options[this.selectedIndex])">
            @foreach (var customer in Model)
            {
                <option value="@customer.Name" id="@customer.Id" balance="@customer.Price">@customer.Name</option>

            }
        </select>

        <input type="text" name="price" id="price">
        <input type="hidden" name="id" id="id">
        <input type="submit" value="Update" class="btn btn-success">
    }
</div>

@section Scripts
{
    <script src="js/pages/home-index.js" asp-append-version="true"></script>
}