@{
    ViewData["Title"] = "Home Page";
}

@model List<Elk.Serilog.RabbitMq.Client.Model.Customer>

@using (Html.BeginForm("Monitoring", "Home", "FormMethod.Post"))
{
    @foreach (var customer in Model)
    {
        <div class="radio">
            <label>
                <input type="radio" name="ID" id="ID" value="@customer.Id">@customer.Name
            </label>
            <label>@customer.Price ₺</label>
        </div>
    }
    <br>
    <input type="submit" value="Buy" class="btn btn-success">
}